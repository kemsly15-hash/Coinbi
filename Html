<script>
let coins = parseInt(localStorage.getItem("coins")) || 0;
let lastBonus = localStorage.getItem("bonus") || "";

updateCoins();

function updateCoins(){
  document.getElementById("coins").innerText = coins;
  localStorage.setItem("coins", coins);
}

function openGame(id){
  document.querySelectorAll("section").forEach(s=>s.classList.remove("active"));
  document.getElementById(id).classList.add("active");
}

function goHome(){
  openGame("home");
}

/* BONUS */
function dailyBonus(){
  let today = new Date().toDateString();
  if(today !== lastBonus){
    coins += 50;
    lastBonus = today;
    localStorage.setItem("bonus", today);
    alert("ğŸ Bonus +50 coins");
    updateCoins();
  }else{
    alert("â³ Bonus dÃ©jÃ  pris aujourd'hui");
  }
}

/* JEUX */
function playClicker(){
  coins += Math.floor(Math.random()*10)+1;
  updateCoins();
}

function playGuess(){
  let user = parseInt(document.getElementById("guessInput").value);
  let win = Math.floor(Math.random()*5)+1;
  if(user === win){
    coins += 25;
    alert("ğŸ‰ GagnÃ© +25");
  }else{
    alert("âŒ Perdu");
  }
  updateCoins();
}

function playRoulette(){
  if(Math.random() < 0.4){
    coins += 30;
    alert("ğŸ‰ GagnÃ© +30");
  }else{
    alert("âŒ Perdu");
  }
  updateCoins();
}
